<%- include('partials/main.ejs') %>

<main>
    <h1 class="text-center mt-3">Formulario <span class="text-primary">EJS</span></h1>
    <div class="container mt-4 bg-light p-2 border">
        <form action="/productos" enctype="application/x-www-form-urlencoded" method="POST">
            <div class="mb-5">
                <label for="title" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="title" name="title">
                <label for="price" class="form-label">Precio</label>
                <input type="number" class="form-control" id="price" name="price">
                <label for="thumbnail" class="form-label">Foto URL</label>
                <input type="text" class="form-control" id="thumbnail" name="thumbnail">
            </div>
            <button type="submit" class="btn btn-primary me-3">Cargar producto</button>
            <a href="/productos" class="btn btn-outline-warning">Ver Productos</a>
        </form>
    </div>
</main>

</body>

</html>